<?xml version="1.0" encoding="utf-8" standalone="no"?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">

<!-- BlackBerry 10 application descriptor file.

    Specifies parameters for identifying, installing, and launching native applications on BlackBerry 10.

-->

    <!-- A universally unique application identifier. Must be unique across all BlackBerry 10 applications.
         Using a reverse DNS-style name as the id is recommended. (Eg. com.example.ExampleApplication.) Required. -->
    <id>com.omweather.meecast</id>

    <!-- The name that is displayed in the BlackBerry 10 application installer.
         May have multiple values for each language. See samples or xsd schema file. Optional. -->
    <name>MeeCast</name>

    <!-- A string value of the format <0-999>.<0-999>.<0-999> that represents application version which can be used to check for application upgrade.
         Values can also be 1-part or 2-part. It is not necessary to have a 3-part value.
         An updated version of application must have a versionNumber value higher than the previous version. Required. -->
    <versionNumber>0.6.9</versionNumber>

    <!-- Fourth digit segment of the package version. First three segments are taken from the
         <versionNumber> element.  Must be an integer from 0 to 2^16-1 -->
    <buildId>1</buildId>

    <!-- Description, displayed in the BlackBerry 10 application installer.
         May have multiple values for each language. See samples or xsd schema file. Optional. -->
    <description>MeeCast - multiplatform highly customizable open source weather forecast client based on OMWeather code</description>

    <!--  Name of author which is used for signing. Must match the developer name of your development certificate. -->
    <author>Andrew Zhilin</author>

    <initialWindow>
        <aspectRatio>portrait</aspectRatio>
        <autoOrients>false</autoOrients>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>
    
    <!--  The category where the application appears. Either core.games or core.media. -->
    <category>core.media</category>
    <configuration id="com.qnx.qcc.toolChain.398719213" name="Default">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset entry="true" path="arm/o.le-v7-g/omweather-qml" type="Qnx/Elf">omweather-qml</asset>
       <asset path="arm/foreca/o.le-v7-g/forecacom" type="Qnx/Elf">forecacom</asset>
       <asset path="meecast/qt-qml/qml">qml</asset>
    </configuration>
    <configuration id="com.qnx.qcc.toolChain.530812073" name="Device-Debug">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset entry="true" path="arm/o.le-v7-g/omweather-qml" type="Qnx/Elf">omweather-qml</asset>
       <asset path="arm/foreca/o.le-v7-g/forecacom" type="Qnx/Elf">forecacom</asset>
    </configuration>
    <configuration id="com.qnx.qcc.toolChain.585662339" name="Device-Release">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset type="Qnx/Elf" entry="true" path="arm/o.le-v7/omweather-qml">omweather-qml</asset>
       <asset path="arm/foreca/o.le-v7/forecacom" type="Qnx/Elf">forecacom</asset>
    </configuration>
    <configuration id="com.qnx.qcc.toolChain.1526872727" name="Simulator-Debug">
       <platformArchitecture>x86</platformArchitecture>
       <asset public="true" path="x86/o-g/omweather-qml" entry="true" type="Qnx/Elf">omweather-qml</asset>
       <asset path="x86/foreca/o-g/forecacom" type="Qnx/Elf">forecacom</asset>
    </configuration>
    
    <!--  The icon for the application, which should be 150x150. -->
    <icon>
        <image>icon.png</image>
    </icon>
    
    <!--  The splash screen that will appear when your application is launching. -->
    <splashScreens>
       <image>splashscreen.jpg</image>
    </splashScreens>

    <!-- Application assets -->
    <asset path="splashscreen.jpg">splashscreen.jpg</asset>
    <asset path="icon.png">icon.png</asset>
    <asset path="meecast/qt-qml/qml">assets/qml</asset>
    <asset path="meecast/core/data/images">assets/share/images</asset>
    <asset path="meecast/core/data/button_icons">assets/button_icons</asset>
    <asset path="meecast/core/data/data.xsd">share/xsd/data.xsd</asset>
    <asset path="meecast/core/data/icons">assets/share/icons</asset>
    <asset path="omweather-foreca-com-stations-db/data/foreca.com.xml">share/sources/foreca.com.xml</asset>
    <asset path="omweather-foreca-com-stations-db/data/foreca.com.db">share/db/foreca.com.db</asset>
    
    <!-- Request permission to execute native code.  Required for native applications. -->
    <permission system="true">run_native</permission>
    <env var="LD_LIBRARY_PATH" value="app/native/lib:/usr/lib/qt4/lib"/>
    <cascadesTheme>dark</cascadesTheme>
</qnx>
